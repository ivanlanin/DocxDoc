<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="DocxDoc Test Suite">
            <directory>tests/DocxDoc/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/DocxDoc/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="./build/clover.xml" />
    </logging>
</phpunit>
